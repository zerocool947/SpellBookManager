<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddCharacterActivity" >

    <EditText
        android:id="@+id/characterLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/characterName"
        android:ems="7" />


    <EditText
        android:id="@+id/casterLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/characterLevel"
        android:ems="7" />

    <EditText
        android:id="@+id/characterClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/casterLevel"
        android:layout_alignLeft="@+id/characterName"
        android:ems="7" />


    <EditText
        android:id="@+id/turnAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterClass"
        android:layout_alignLeft="@+id/characterName"
        android:ems="7" />

    <EditText
        android:id="@+id/race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/turnAttempts"
        android:ems="7" />

    <EditText
        android:id="@+id/strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/race"
        android:ems="7" />

    <EditText
        android:id="@+id/dexterity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/strength"
        android:ems="7" />

    <EditText
        android:id="@+id/constitution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/dexterity"
        android:ems="7" />

    <EditText
        android:id="@+id/intelligence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/constitution"
        android:ems="7" />

    <EditText
        android:id="@+id/wisdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/intelligence"
        android:ems="7" />

    <EditText
        android:id="@+id/charisma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/wisdom"
        android:ems="7" />
    
     <TextView
        android:id="@+id/characterLevelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/characterLevel"
        android:layout_alignLeft="@+id/characterNameView"
        android:text="Level" />

    <TextView
        android:id="@+id/casterLevelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/casterLevel"
        android:layout_alignLeft="@+id/characterLevelView"
        android:text="Caster Level" />

    <TextView
        android:id="@+id/characterClassView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/characterClass"
        android:layout_alignLeft="@+id/casterLevelView"
        android:text="Character Class" />

    <TextView
        android:id="@+id/turnAttemptsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/turnAttempts"
        android:layout_alignLeft="@+id/characterClassView"
        android:text="Turn Attempts" />

    <TextView
        android:id="@+id/raceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/race"
        android:layout_alignLeft="@+id/turnAttemptsView"
        android:text="Race" />

    <TextView
        android:id="@+id/intelligenceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/intelligence"
        android:layout_alignLeft="@+id/raceView"
        android:text="Intelligence" />

    <TextView
        android:id="@+id/strengthView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/strength"
        android:layout_alignLeft="@+id/intelligenceView"
        android:text="Strength" />

    <TextView
        android:id="@+id/dexterityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dexterity"
        android:layout_alignLeft="@+id/strengthView"
        android:text="Dexterity" />

    <TextView
        android:id="@+id/constitutionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/constitution"
        android:layout_alignLeft="@+id/dexterityView"
        android:text="Constitution" />

    <TextView
        android:id="@+id/wisdomView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wisdom"
        android:layout_alignLeft="@+id/constitutionView"
        android:text="Wisdom" />

    <TextView
        android:id="@+id/charismaView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/charisma"
        android:layout_alignLeft="@+id/wisdomView"
        android:text="Charisma" />

    <Button
        android:id="@+id/createCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charisma"
        android:layout_centerHorizontal="true"
        android:text="Create Character" />

    <EditText
        android:id="@+id/characterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/characterNameView"
        android:layout_alignBottom="@+id/characterNameView"
        android:layout_toRightOf="@+id/createCharacter"
        android:ems="7"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/characterNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="73dp"
        android:layout_toLeftOf="@+id/createCharacter"
        android:text="Character Name" />

</RelativeLayout>
    </ScrollView>
