<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddCharacterActivity" >

    <EditText
        android:id="@+id/characterName"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:ems="7" />

    <EditText
        android:id="@+id/characterLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/characterName"
        android:ems="7" />


    <EditText
        android:id="@+id/casterLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/characterLevel"
        android:ems="7" />

    <EditText
        android:id="@+id/characterClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/casterLevel"
        android:layout_alignLeft="@+id/characterName"
        android:ems="7" />


    <EditText
        android:id="@+id/turnAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterClass"
        android:layout_alignLeft="@+id/characterName"
        android:ems="7" />

    <EditText
        android:id="@+id/race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/turnAttempts"
        android:ems="7" />

    <EditText
        android:id="@+id/intelligence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/race"
        android:ems="7" />

    <EditText
        android:id="@+id/strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/intelligence"
        android:ems="7" />

    <EditText
        android:id="@+id/dexterity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/strength"
        android:ems="7" />

    <EditText
        android:id="@+id/constitution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/dexterity"
        android:ems="7" />

    <EditText
        android:id="@+id/wisdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/constitution"
        android:ems="7" />

    <EditText
        android:id="@+id/charisma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/characterName"
        android:layout_below="@+id/wisdom"
        android:ems="7" />
    
     <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/characterLevel"
        android:layout_alignLeft="@+id/textView1"
        android:text="Level" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/casterLevel"
        android:layout_alignLeft="@+id/textView2"
        android:text="Caster Level" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="238dp"
        android:layout_marginTop="35dp"
        android:text="Character Name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/characterClass"
        android:layout_alignLeft="@+id/textView3"
        android:text="Character Class" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/turnAttempts"
        android:layout_alignLeft="@+id/textView4"
        android:text="Turn Attempts" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/race"
        android:layout_alignLeft="@+id/textView5"
        android:text="Race" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/intelligence"
        android:layout_alignLeft="@+id/textView6"
        android:text="Intelligence" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/strength"
        android:layout_alignLeft="@+id/textView7"
        android:text="Strength" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dexterity"
        android:layout_alignLeft="@+id/textView8"
        android:text="Dexterity" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/constitution"
        android:layout_alignLeft="@+id/textView9"
        android:text="Constitution" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wisdom"
        android:layout_alignLeft="@+id/textView10"
        android:text="Wisdom" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/charisma"
        android:layout_alignLeft="@+id/textView11"
        android:text="Charisma" />

    <Button
        android:id="@+id/createCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charisma"
        android:layout_centerHorizontal="true"
        android:text="Create Character" />

</RelativeLayout>
