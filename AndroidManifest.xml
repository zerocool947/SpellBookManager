<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.poorfellow.spellbookmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.poorfellow.spellbookmanager.ManagerHome"
            android:label="@string/title_activity_home_page" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.poorfellow.spellbookmanager.CharacterListActivity"
            android:label="@string/title_activity_character_list"
            android:parentActivityName="com.poorfellow.spellbookmanager.ManagerHome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poorfellow.spellbookmanager.ManagerHome" />
        </activity>
        <activity
            android:name="com.poorfellow.spellbookmanager.AddCharacterActivity"
            android:label="@string/title_activity_add_character" >
        </activity>
        <activity
            android:name="com.poorfellow.spellbookmanager.SpellListActivity"
            android:label="@string/title_spell_list"
            android:parentActivityName="com.poorfellow.spellbookmanager.ManagerHome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poorfellow.spellbookmanager.ManagerHome" />
        </activity>
        <activity
            android:name="com.poorfellow.spellbookmanager.SpellDetailActivity"
            android:label="@string/title_spell_detail"
            android:parentActivityName=".SpellListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SpellListActivity" />
        </activity>
        <activity
            android:name="com.poorfellow.spellbookmanager.CharacterViewListActivity"
            android:label="@string/title_activity_character_view_list"
            android:parentActivityName="com.poorfellow.spellbookmanager.CharacterListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poorfellow.spellbookmanager.CharacterListActivity" />
        </activity>
        <activity
            android:name="com.poorfellow.spellbookmanager.CreateSpellBlockActivity"
            android:label="@string/title_activity_create_spell_block"
            android:parentActivityName="com.poorfellow.spellbookmanager.CharacterViewListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poorfellow.spellbookmanager.CharacterViewListActivity" />
        </activity>
    </application>

</manifest>
